pipeline {
    agent any

    stages {
        stage('Code Fetch') {
            steps {
                echo 'code fetch from github.'
                git url:'https://github.com/dineshkshrestha/html5-boilerplate.git',branch:'dev'
            }
        }
              
      
        stage('Build') {
            steps {
                echo 'code build with docker.'
               def containerId = sh(script: "docker ps -q --filter 'name=html-website'", returnStdout: true).trim()
                    if (containerId) {
                        sh "docker stop ${containerId}"
                        sh "docker rm ${containerId}"
                    }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'code deployed in container.'
                sh ' docker run -d -p 3000:80 html-dev-website'
            }
        }
    }
}
